<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recyclrClasificacionId">

    <TextView
        android:id="@+id/clasificacionTextView"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="clasificacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreJugadorTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="nombreJugador"
        app:layout_constraintStart_toEndOf="@+id/clasificacionTextView"
        app:layout_constraintTop_toTopOf="@+id/clasificacionTextView" />

    <TextView
        android:id="@+id/puntosTextView"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Puntos"
        app:layout_constraintStart_toEndOf="@+id/nombreJugadorTextView"
        app:layout_constraintTop_toTopOf="@+id/nombreJugadorTextView" />

    <EditText
        android:id="@+id/editTextPuntuar"
        android:layout_width="160dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/border_edittext_puntuar"
        android:ems="10"
        android:enabled="false"
        android:inputType="text"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/puntosTextView"
        app:layout_constraintTop_toTopOf="@+id/puntosTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>